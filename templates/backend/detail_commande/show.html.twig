                                                <td>{{ f.article.sousFamille.libelleSF}}</td>
                                                <td>{{ f.article.libelleArticle  }}</td>
                                                <td>{{ f.quantite}}</td>
                                           

                                                
                                                 
                                                {# <td><a type="button" class="btn mb-1 btn-rounded btn-success" href="{{ path('app_famille_edit', {'id': f.id}) }}">modifier</a>
                                                </td> #}
